			}

			.modal-description {
				font-size: 16px;
				margin-bottom: 20px;
			}

			.modal-actions {
				text-align: right;
			}

			.modal-btn {
				padding: 10px 15px;
				margin-left: 5px;
				text-align: center;
				text-decoration: none;
				display: inline-block;
				font-size: 16px;
				cursor: pointer;
