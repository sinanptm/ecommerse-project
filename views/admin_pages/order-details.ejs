    <!-- Template CSS -->
    <link href="css/main.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
            <a href="/admin/" class="brand-wrap">
                <h3 class="logo" alt="Evara Dashboard">TRENDS</h1>
