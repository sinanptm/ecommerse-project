        <section class="content-main">
            <form action="/admin/editProduct/<%= product._id %><% if (type) { %>?type=dsfs<% } %>" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-6">
                        <div class="content-header">
                            <h2 class="content-title">Edit <%= product.name %>
                            </h2>
                            <% if (typeof msg !=='undefined' ) { %>
                                <h6 style="color:#1ea344;">
                                    <%= msg %>
                                </h6><br><br><br>
                                <% } %>
                                    <div>
                                        <button class="btn btn-md rounded font-sm hover-up" type="submit">Submit
                                            Changes</button>
                                    </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6> General info</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">New Product title</label>
                                            <input required type="text" placeholder="Type here" class="form-control"
                                            value="<%= product.name %>" name="name" id="name">
                                            <small class="form-text text-left" style="color: red; display: none;"
                                                id="errorName"></small>
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label">New Quantity</label>
                                            <input type="number" required placeholder="Type here" class="form-control"
                                            name="quantity" id="quantity" value="<%= product.quantity %>" min="0"
                                            rows="4"></input>
                                            <small class="form-text text-left" style="color: red; display: none;"
                                                id="errorQuantity"></small>
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label">Status</label>
                                            <select required name="status" class="form-select" id="status">
                                                <option value="Available" <%=product.status==='Available' ? 'selected'
                                                    : '' %>>Available</option>
                                                <option value="Disabled" <%=product.status==='Disabled' ? 'selected'
                                                    : '' %>>Disabled</option>
                                            </select>
                                            <small class="form-text text-left" style="color: red; display: none;"
                                                id="errorStatus"></small>
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- row.// -->
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6>New Price</h6>
                                    </div>

                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">New Cost in INR</label>
                                            <input type="number" required name="price" value="<%= product.price %>"
                                            placeholder="0000.0" class="form-control" id="price" min="0">
                                            <small class="form-text text-left" style="color: red; display: none;"
                                                id="errorPrice"></small>
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- row.// -->
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6>New Discount</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">New Discount in %</label>
                                            <input value="<%= product.discount %>" type="number" required
                                            name="discount" placeholder="Enter new discount" class="form-control" id="discount"
                                            min="0" max="99">
                                            <small class="form-text text-left" style="color: red; display: none;"
                                                id="errorDiscount"></small>
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- row.// -->
                                
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6> Description</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">Product Description</label>
                                            <textarea required placeholder="Type here" class="form-control"
                                            name="description" id="productDescription" rows="4">
                                            <%= product.description %>
                                        </textarea>
                                        
                                            <small class="form-text text-left" style="color: red; display: none;"
                                                id="errorProductDescription"></small>
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- row.// -->
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6>New Category</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">                                          
                                          <select class="form-select" name="categoryid">
                                            <option value="<%= product.category._id || '' %>" <% if (!product.category._id) { %>selected<% } %>>
                                              <%= product.category._id ? product.category.name : 'No category available' %>
                                            </option>
                                            <% categories.forEach(category => { %>
                                              <option value="<%= category._id %>" <% if (category._id.toString() === String(product.category._id)) { %>selected<% } %>>
                                                <%= category.name %>
                                              </option>
                                            <% }); %>
                                          </select>                                          
                                        </div>
                                      </div>
                                      
                                        

                                    </div> <!-- col.// -->
