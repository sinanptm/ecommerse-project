<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Evara Dashboard</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:title" content="" />
    <meta property="og:type" content="" />
    <meta property="og:url" content="" />
    <meta property="og:image" content="" />
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="imgs/theme/favicon.svg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link href="css/main.css" rel="stylesheet" type="text/css" />
    <style>
        .edit-form {
            display: none;
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
        }

        .toast-warning {
            background-color: #73030d;
            border-color: #76000c;
            color: #ffffff;
        }

        .custom-link-style {
            text-decoration: underline;
            /* Remove underline */
        }

        .user-details-container {
            font-family: "Arial", sans-serif;
            max-width: 800px;
            margin: auto;
            padding: 30px;
            background-color: #f8f8f8;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            opacity: 0;
            animation: fadeIn 0.8s ease-in-out forwards;
            transition: transform 0.3s ease-in-out;
        }

        .user-details-container:hover {
            transform: scale(1.02);
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        ul {
            list-style: none;
            padding: 0;
            margin-right: 20px;
            /* Added margin for separation between image and text */
        }

        li {
            margin-bottom: 10px;
        }

        li strong {
            font-weight: bold;
            font-size: 1.2em;
            color: #333;
        }

        .small-image {
            max-width: 100px;
        }
    </style>
</head>

<body>
    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
            <a href="/admin/" class="brand-wrap">
                <h3 class="logo" alt="Evara Dashboard">TRENDS</h1>
            </a>
            <div>
                <button class="btn btn-icon btn-aside-minimize">
                    <i class="text-muted material-icons md-menu_open"></i>
                </button>
            </div>
        </div>
        <nav>
            <ul class="menu-aside">
                <li class="menu-item">
                    <a class="menu-link" href="/admin/dashboard">
                        <i class="icon material-icons md-home"></i>
                        <span class="text">Dashboard</span>
                    </a>
                </li>
                <li class="menu-item has-submenu active">
                    <a class="menu-link" href="/admin/products">
                        <i class="icon material-icons md-shopping_bag"></i>
                        <span class="text">Products</span>
                    </a>
                    <div class="submenu">
                        <a href="/admin/products">Product List</a>
                        <a href="/admin/catogories" class="active">Categories</a>
                        <a href="/admin/addProduct">Add product </a>
                    </div>
                </li>
                <li class="menu-item ">
                    <a class="menu-link" href="/admin/users"> <i class="icon material-icons md-store"></i>
                        <span class="text">Users</span>
                    </a>
                </li>

                <li class="menu-item">
                    <a class="menu-link" href="/admin/orders-list"> <i class="icon material-icons md-shopping_cart"></i>
                        <span class="text">Orders</span>
                    </a>
                </li>
                <!-- <li class="menu-item">
                    <a class="menu-link" href="page-reviews.html"> <i class="icon material-icons md-comment"></i>
                        <span class="text">Reviews</span>
                    </a>
                </li> -->
                <li class="menu-item">
                    <a class="menu-link" href="/admin/coupon-managment"> <i class="icon material-icons md-stars"></i>
                        <span class="text">Coupons</span> </a>
                </li>
            </ul>

                <br />
                <br />
        </nav>
    </aside>
    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">
                
            </div>
            <div class="col-nav">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> <i class="material-icons md-apps"></i> </button>
                <ul class="nav"> 
                    <li class="dropdown nav-item">                        
                            <a class="dropdown-item text-danger" href="/admin/logout"><i
                                    class="material-icons md-exit_to_app"></i>Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </header>

        <section class="content-main" id="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Categories</h2>
                    <strong>Total Categories: <%= count %></strong>
                </div>

                <div>
                    <button class="btn btn-primary" data-bs-target="#editUserModal" data-bs-toggle="modal">
                        <i class="material-icons md-plus"></i> Create new
                    </button>
                    <% if (typeof msg !=='undefined' ) { %>
                        <h6 style="color: #ff0000">
                            <%= msg %>
                        </h6>
                        <% } %>
                </div>
            </div>
            <header class="card-header" style="max-width: 800px; margin-left: auto; margin-right: auto;">
                <div class="row align-items-center" style="max-width: 800px;">
                    <div class="col-lg-4 col-md-6 me-auto">
                        <input onkeydown="if (event.keyCode == 13) { event.preventDefault(); searchCategory(event) }"
                            type="text" placeholder="Search Category" class="form-control">
                    </div>
                  
                    <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                        <select id="sortSelect" class="form-select"
                            onchange="categorySort(event,'<%= currentPage %>','<%= name %>')">
                            <option value="default" <%=sort==='default' ? 'selected' : '' %> >Default Sorting</option>
                            <option value="most_saled" <%=sort==='most_saled' ? 'selected' : '' %>>Most Popular</option>
                            <option value="less_saled" <%=sort==='less_saled' ? 'selected' : '' %>>Least Popular
                            </option>
                            <option value="most_products" <%=sort==='most_products' ? 'selected' : '' %>>Most Products
                            </option>
                            <option value="less_products" <%=sort==='less_products' ? 'selected' : '' %>>Least Products
                            </option>
                            <option value="newness" <%=sort==='newness' ? 'selected' : '' %>>Newest Arrivals</option>
                        </select>
                    </div>
                </div>
            </header>


            <% if (categories.length>0) { %>
                <% categories.forEach(function(category) { %>
                    <div class="user-details-container">
                        <ul>
                            <li>
                                <h3>
                                    <%= category.name %>
                                </h3>
                            </li>
                            <li>
                                <strong>
                                    <%= category.description %>
                                </strong>
                            </li>
                            <li>
                                <strong> Products: <%= category.items.length %></strong>
                            </li>
                            <li>
                                <ul>
                                    <li>
                                        <strong>Sales: <%= category.sales %></strong>
                                    </li>
                                </ul>
                            </li>
                            <button class="btn btn-primary" data-bs-target="#editCategoryModal<%= category._id %>"
                                data-bs-toggle="modal">
                                Edit
                            </button>
                            <a href="javascript:void(0);" <% if (category.items.length>0) { %> onclick="showToastr();"
                                <% } else { %> onclick="confirmDelete('<%= category._id %>');" <% } %>
                                            class="btn btn-danger">Delete
                            </a>
                        </ul>
                        <img <% if (category.img.length> 23) { %>
                        src="<%= category.img %>"
                            <% } else { %>
                                src="/resized_images/<%= category.img %>"
                                    <% } %>
                                        alt="<%= category.name %> Image" class="small-image"
                                            />
    
                                            <div class="user-details-buttons"></div>
    
                    </div><br>
    
                    <div class="modal fade" id="editCategoryModal<%= category._id %>" aria-hidden="true"
                        aria-labelledby="editUserModalLabel" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="editUserModalLabel">
                                        Edit Category
                                    </h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form action="/admin/editCatogories/<%= category._id %>" method="post"
                                        enctype="multipart/form-data">
                                        <div>
                                            <a href="/admin/addProduct" class="btn btn-primary"><i
                                                    class="material-icons md-plus"></i>new Product to this catogory</a>
                                        </div>
                                        <div class="mb-3">
                                            <label for="name" class="form-label">Name</label>
                                            <input type="text" class="form-control" id="name" name="name" required
                                                value="<%= category.name %>" />
                                        </div>
    
                                        <div class="mb-3">
                                            <img <% if (category.img.length> 23) { %>
                                            src="<%= category.img %>"
                                                <% } else { %>
                                                    src="/resized_images/<%= category.img %>"
                                                        <% } %>
                                                            alt="<%= category.name %> Image" class="small-image"
                                                                />
    
                                                                <label for="file" class="form-label">Image Path</label>
                                                                <input type="file" class="form-control" id="file"
                                                                    name="file" />
                                        </div>
                                        <section>
                                            <div class="mb-3">
                                                <label for="categoryType" class="form-label">Category Type</label>
                                                <select class="form-control" id="categoryType" name="type">
                                                    <option value="men" <% if (category.type==='men' ) { %>selected<% } %>
                                                            >Men</option>
                                                    <option value="women" <% if (category.type==='women' ) { %>selected
                                                        <% } %>>Women
                                                    </option>
                                                    <option value="children" <% if (category.type==='children' ) { %>
                                                        selected<% } %>>Children</option>
                                                </select>
                                            </div>
    
                                            <div class="mb-3">
                                                <label for="description" class="form-label">Description</label>
                                                <input type="text" class="form-control" id="description" name="description"
                                                    required value="<%= category.description %>" />
                                            </div>
    
                                            <button type="submit" class="btn btn-primary">Save</button>
                                    </form>
    
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            <% }else{ %>
                <h3>No Catogories At The Moment</h3> for refreshing the page <a href="/admin/catogories" style="color: blue;">Click here</a>
            <% } %>


                    <div class="pagination-area mt-30 mb-50">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-start" id="pagination">
                                <% if (currentPage> 1) { %>
                                    <li class="page-item"><a class="page-link"
                                            href="/admin/catogories?page=<%= currentPage-1 %>&&sort=<%= sort %>"><i
                                                class="material-icons md-chevron_left"></i></a></li>
                                    <% } %>
                                        <% for (let i=1; i <=totalPages; i++) { %>
                                            <li class="page-item <%= currentPage === i ? 'active' : '' %>"><a
                                                    class="page-link"
                                                    href="/admin/catogories?page=<%= i %>&&sort=<%= sort %>">
                                                    <%= i %>
                                                </a></li>
                                            <% } %>
                                                <% if (currentPage < totalPages) { %>
                                                    <li class="page-item"><a class="page-link"
                                                            href="/admin/catogories?page=<%= currentPage+1 %>&&sort=<%= sort %>"><i
                                                                class="material-icons md-chevron_right"></i></a></li>
                                                    <% } %>
                            </ul>
                        </nav>
                    </div>
                    <br><br><br>
        </section>


        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                        document.write(new Date().getFullYear());
                    </script>
                    Â©, Evara - HTML Ecommerce Template .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">All rights reserved</div>
                </div>
            </div>
        </footer>
        <div class="modal fade" id="editUserModal" aria-hidden="true" aria-labelledby="editUserModalLabel"
            tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="editUserModalLabel">
                            Add Category
                        </h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/admin/catogories" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" name="name" autocomplete="off"
                                    required />
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Image</label>
                                <input type="file" class="form-control" id="image" name="image" autocomplete="off"
                                    required />
                            </div>
                            <div class="mb-3">
                                <label for="type" class="form-label">Type</label>
                                <!-- If it's a dropdown, use a select element -->
                                <select class="form-control" id="type" name="type" required>
                                    <option value="men">Men</option>
                                    <option value="women">Women</option>
                                    <option value="children">Children</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <input type="text" class="form-control" id="description" name="description"
                                    autocomplete="off" required />
                            </div>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </main>
    <script>
        function confirmDelete(id) {
            var confirmDelete = confirm("Are you sure you want to delete this catogory?");
            if (confirmDelete) {
                window.location.href = "/admin/deleteCatogory/" + id;
            }
        }
        function showToastr() {
            toastr.options = {
                closeButton: true,
                progressBar: true,
                showMethod: 'slideDown',
                timeOut: 4000,
            };

            toastr.warning("You Can't Delete The Catogorie Wich Has Products Listed", 'Warning');
        }
    </script>
    <script src="js/vendors/jquery-3.6.0.min.js"></script>
    <script src="js/vendors/bootstrap.bundle.min.js"></script>
    <script src="js/vendors/select2.min.js"></script>
    <script src="js/vendors/perfect-scrollbar.js"></script>
    <script src="js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="js/main.js" type="text/javascript"></script>
</body>

</html>